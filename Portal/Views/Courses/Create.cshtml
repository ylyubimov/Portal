@using Portal.Models
@model CourseCreateEdit

@{
    ViewBag.Title = "Create";
}

<h2>Введите данные курса</h2>

@using (Html.BeginForm("Create", "Courses", null, FormMethod.Post))
{
    <h4>Название курса</h4>
    @Html.EditorFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name)
    
    <h4>Описание курса</h4>
    @Html.EditorFor(m => m.Description)
    @Html.ValidationMessageFor(m => m.Description)
    
    <h4>Выберите базовую кафедру</h4>
    @Html.DropDownListFor(m => m.Base_Part, new SelectList( (new List<string> { "KL", "RIOT" })), "Все")
    
    <h4>Число занятий</h4>
    @Html.EditorFor(m => m.Number_of_Classes)
    @Html.ValidationMessageFor(m => m.Number_of_Classes)
    
    <h4>Количество часов</h4>
    @Html.EditorFor(m => m.Number_of_Hours)
    @Html.ValidationMessageFor(m => m.Number_of_Hours)
    
    <h4>Место проведения</h4>
    @Html.EditorFor(m => m.Place)
    @Html.ValidationMessageFor(m => m.Place)
    
    <h4>Тип отчетности</h4>
    @Html.EditorFor(m => m.Report_Type);
    @Html.ValidationMessageFor(m => m.Report_Type)
    
    <h4>Дата зачета/экзамена </h4>
    @Html.EditorFor(m => m.Report_Date);
    @Html.ValidationMessageFor(m => m.Report_Date)
    @Html.HiddenFor(m => m.ID)
    <div>
        <h4>Выберите учителей</h4>

            @for( int i = 0; i < Model.Teachers.Count(); i++ )
            {
                    <div>
                        <img src=@Model.Teachers[i].Picture.URL width="40" height="40">
                    </div>
                    <div>
                        @Html.CheckBoxFor(m => m.Chosen_Teachers[i]) @(Model.Teachers[i].First_Name + " " + Model.Teachers[i].Second_Name + " " + Model.Teachers[i].Middle_Name) <br />
                        <label> @(Model.Teachers[i].UserName)</label>
                        @Html.HiddenFor(m => m.Teachers[i].Id)
                        @Html.HiddenFor(m => m.Teachers[i].First_Name)
                        @Html.HiddenFor(m => m.Teachers[i].Second_Name)
                        @Html.HiddenFor(m => m.Teachers[i].Middle_Name)
                        @Html.HiddenFor(m => m.Teachers[i].UserName)
                        @Html.HiddenFor(m => m.Teachers[i].Picture.URL)
                    </div>

            }

    </div>
    <div>
        <h4>Выберите студентов</h4>

        @for (int i = 0; i < Model.Students.Count(); i++)
        {
            
                <div>
                    <img src=@Model.Students[i].Picture.URL width="40" height="40">
                </div>
                    <div>
                        @Html.CheckBoxFor(m => m.Chosen_Students[i]) @(Model.Students[i].First_Name + " " + Model.Students[i].Second_Name + " " + Model.Students[i].Middle_Name) <br />
                        <label> @(Model.Students[i].UserName)</label>
                        @Html.HiddenFor(m => m.Students[i].Id)
                        @Html.HiddenFor(m => m.Students[i].First_Name)
                        @Html.HiddenFor(m => m.Students[i].Second_Name)
                        @Html.HiddenFor(m => m.Students[i].Middle_Name)
                        @Html.HiddenFor(m => m.Students[i].UserName)
                        @Html.HiddenFor(m => m.Students[i].Picture.URL)
                    </div>

        }
    </div>
    <div>
    <h4>Выберите программы</h4>
        @for (int i = 0; i < Model.Programs.Count(); i++)
        {
            <div>
                @Html.CheckBoxFor(m => m.Chosen_Programs[i]) @(Model.Programs[i].Name) <br />
                @Html.HiddenFor(m => m.Programs[i].ID)
                @Html.HiddenFor(m => m.Programs[i].Name)
            </div>
        }
    </div>

    <div>
        <h4>Выберите блог</h4>
        @for (int i = 0; i < Model.Blogs.Count(); i++)
        {
            <div>
                @Html.CheckBoxFor(m => m.Chosen_Blogs[i]) @(Model.Blogs[i].Name) <br />
                @Html.HiddenFor(m => m.Blogs[i].ID)
                @Html.HiddenFor(m => m.Blogs[i].Name)
            </div>
        }
    </div>

    <input type="submit" value="Создать" />

}
