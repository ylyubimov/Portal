@using Portal.Models
@model Course

@{
    ViewBag.Title = "Course";
}

<div class="container-fluid">
    <div class="container course-wrap">
        <div class="course">
            <div class="course-description">
                <h2>@Model.Name</h2>
                @Model.Description
            </div>
            <h4>Teachers:</h4>
            <div class="course-teachers">
                @foreach(Teacher teacher in Model.Teachers)
                {
                    <div class="course-teacher">
                        <img src=@teacher.Picture.URL />
                        <div>@teacher.First_Name @teacher.Second_Name</div>
                    </div>
                }
            </div>
            <h4>Duration:</h4>
            <div class="course-duration">@Model.Number_of_Classes classes, @Model.Number_of_Hours hours</div>
            <h4>Materials:</h4>
            <div class="course-materials">
                @foreach(Blog blog in Model.Blogs)
                {
                    <div>Blog @Html.ActionLink(blog.Name, "blog", "blogs", null, null)</div>
                }

                @foreach(Video video in Model.Videos)
                {
                    <div>Video <a href=@video.URL>@video.Name</a></div>
                }
            </div>
        </div>
    </div>
</div>