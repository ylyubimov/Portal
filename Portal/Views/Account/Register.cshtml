@model Portal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="register-page-wrap">
    <div class="register-form-wrap">
        <div class="login-form">
            <h2>Welcome to ABBYY Portal</h2>
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                @Html.TextBoxFor(m => m.UserName, new { @class = "register-text-input", placeholder = "email" })
                @Html.ValidationMessageFor(m => m.UserName)

                @Html.PasswordFor(m => m.Password, new { @class = "register-text-input", placeholder = "password" })
                @Html.ValidationMessageFor(m => m.Password)

                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "register-text-input", placeholder = "confirm password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)

                @Html.TextBoxFor(m => m.First_Name, new { @class = "register-text-input", placeholder = "first name" })
                @Html.ValidationMessageFor(m => m.First_Name)

                @Html.TextBoxFor(m => m.Second_Name, new { @class = "register-text-input", placeholder = "second name" })
                @Html.ValidationMessageFor(m => m.Second_Name)

                @Html.TextBoxFor(m => m.Middle_Name, new { @class = "register-text-input", placeholder = "middle name" })
                @Html.ValidationMessageFor(m => m.Middle_Name)

                @Html.DropDownListFor(m => m.Person_Type, new SelectList(new List<string> { "Student", "Teacher" }), new { @class = "register-select-input" })
                <br/>
                <input type="submit" value="Sign up" class="btn login-form-button login-sign-up-button" />
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
