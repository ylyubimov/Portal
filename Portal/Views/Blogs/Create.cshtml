@using Portal.Models
@model Blog

@{
    ViewBag.Title = "Create blog";
}

@using (Html.BeginForm("Create", "Blogs", null, FormMethod.Post))
{
    <div class="container blog-wrap">
        @Html.ValidationMessageFor(m => m.Name)
        <div class="blog-preview">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "blog-create-input" } })
            <input class="btn blog-create-button" type="submit" value="Создать" />
        </div>
    </div>
}
