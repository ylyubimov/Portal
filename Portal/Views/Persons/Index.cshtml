@model Portal.Models.Person[]
@{
    ViewBag.Title = "People";
}

<h2>Persons</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Телефон</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (Portal.Models.Person p in Model)
        {
            <tr>
                <td>@Html.ActionLink(p.Second_Name, "person", "persons", new { @id = p.ID }, null)</td>
                <td>@p.First_Name</td>
                <td>@p.Phone</td>
            </tr>
        }
    </tbody>
</table>

