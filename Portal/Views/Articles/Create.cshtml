@using Portal.Models
@model Article
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<form action="~/Articles/Create" method="post">
    @Html.EditorFor(m => m.Name) @Html.ValidationMessageFor(m => m.Name)<br />
    @Html.EditorFor(m => m.Text)<br />
    @Html.DropDownList("Blogs", (IEnumerable<SelectListItem>)ViewBag.Blogs)<br />
    <input type="submit" value="Create" />
</form>


