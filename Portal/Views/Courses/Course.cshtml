@using Portal.Models
@model Course

@{
    ViewBag.Title = Model.Name + " course";
}

<div class="container-fluid">
    <div class="container course-wrap">
        <div class="course">
            <div class="course-description">
                <h2>@Model.Name</h2>
                <div class="course-blogs">
                    Блоги:
                    @foreach (Blog blog in Model.Blogs)
                    {
                        @Html.ActionLink(blog.Name, "blog", "blogs", null, null) 
                    }
                </div>
                @Model.Description
            </div>
            <h4>Учителя:</h4>
            <div class="course-teachers">
                @foreach(Person teacher in Model.Teachers)
                {
                    <a class="course-teacher no-link-attributes" href=@Url.Action("person", "persons", new { @id = teacher.Id })>
                        <img src=@teacher.Picture.URL />
                        <div>@teacher.First_Name @teacher.Second_Name</div>
                    </a>
                }
            </div>
        </div>
        @if (Model.Teachers.Where(c => c.UserName == User.Identity.Name).FirstOrDefault() != null || User.IsInRole("admin"))
        {
        <div class="course-list-of-students">
            <input type="checkbox" id="hd" class="hide" />
            <label for="hd"><span>Список студентов</span> <span class="glyphicon glyphicon-arrow-down"></span></label>
            <div class="course-students-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ФИО</th>
                            <th>Телефон</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Person student in Model.Students)
                        {
                            <tr>
                                <td>@student.Second_Name @student.First_Name</td>
                                <td><a class="course-student-info-link" href="tel:@student.PhoneNumber">@student.PhoneNumber</a></td>
                                <td><a class="course-student-info-link" href="mailto:@student.Email">@student.Email</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="mailto:@ViewBag.MailToAll" class="btn btn-default">Написать всем студентам</a>
            </div>
        </div>
        }
        @foreach (Portal.Models.Lesson lesson in Model.Lessons)
        {
            <div class="comment">
                <div class="comment-header">
                    <a class="author no-link-attributes">
                        @lesson.Name
                    </a>
                </div>
                <p>@lesson.Description</p>
                <p>@lesson.Links</p>
            </div>
        }

        
        @if (Model.Teachers.Where(t => User.Identity.Name == t.UserName).FirstOrDefault() != null || User.IsInRole("admin"))
        {
            using (Html.BeginForm("AddLesson", "Courses", new { @id = Model.ID }, FormMethod.Post))
            {
            <div class="add-comment comment">
                <h4>Добавить новый урок:</h4>
                <div class="comment-header">
                    <div class="author">
                        <input class="add-comment-input" type="text" placeholder="Название урока" name="Name" />
                    </div>
                </div>
                    <input class="add-comment-input" type="text" placeholder="Описание" name="Description" />
                    <input class="add-comment-input" type="text" placeholder="Ссылка на материалы" name="Links" />
                    <input class="btn add-comment-button" type="submit" value="Создать новый урок" />
            
            </div>
            }
        }
    </div>
</div>

