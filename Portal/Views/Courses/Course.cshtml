@using Portal.Models
@model Course

@{
    ViewBag.Title = Model.Name + " course";
}

<div class="container-fluid">
    <div class="container course-wrap">
        <div class="course">
            <div class="course-description">
                <h2>@Model.Name</h2>
                <div class="course-blogs">
                    Blogs:
                    @foreach (Blog blog in Model.Blogs)
                    {
                        @Html.ActionLink(blog.Name, "blog", "blogs", null, null) 
                    }
                </div>
                @Model.Description
            </div>
            <h4>Teachers:</h4>
            <div class="course-teachers">
                @foreach(Person teacher in Model.Teachers)
                {
                    <a class="course-teacher no-link-attributes" href=@Url.Action("person", "persons", new { @id = teacher.Id })>
                        <img src=@teacher.Picture.URL />
                        <div>@teacher.First_Name @teacher.Second_Name</div>
                    </a>
                }
            </div>
            <h4>Materials:</h4>
            <div class="course-materials">       
            </div>
        </div>
        <div class="course_list_of_students">
            <input type="checkbox" id="hd" class="hide" />
            <label for="hd">Список студентов</label>
            <div>
                @foreach (Person student in Model.Students)
                {
                    <a class="course-teacher no-link-attributes" href=@Url.Action("person", "persons", new { @id = student.Id })>
                        <img src=@student.Picture.URL />
                        <div>@student.First_Name @student.Second_Name</div>
                    </a>
                }
            </div>
            <br/>
        </div>

        @foreach (Portal.Models.Lesson lesson in Model.Lessons)
        {
            <div class="comment">
                <div class="comment-header">
                    <a class="author no-link-attributes">
                        @lesson.Name
                    </a>
                </div>
                <p>@lesson.Description</p>
                <p>@lesson.Links</p>
            </div>
        }

        

        @using (Html.BeginForm("AddLesson", "Courses", new { @id = Model.ID }, FormMethod.Post))
        {
            <div class="add-comment comment">
                <h4>Add new lesson:</h4>
                <div class="comment-header">
                    <div class="author">
                        <input class="add-comment-input" type="text" placeholder="Lesson name" name="Name" />
                    </div>
                </div>
                    <input class="add-comment-input" type="text" placeholder="Description" name="Description" />
                    <input class="add-comment-input" type="text" placeholder="Links list" name="Links" />
                    <input class="btn add-comment-button" type="submit" value="Create new lesson" />
            
            </div>
        }
    </div>
</div>

