@model Portal.Models.Person

@{
    ViewBag.Title = "Person";
}

<h3>@Model.First_Name</h3>
<h5>@Model.Second_Name</h5>
<h5>@Model.Phone</h5>
@{
    if (Model is Portal.Models.Teacher)
    {
        <h5>Список преподаваемых курсов</h5>
        foreach (Portal.Models.Course c in ((Portal.Models.Teacher)Model).Taught_Courses)
        {
            <h5>@c.Name</h5>
        }
    }
    else
    {
        <h5>Здесь скоро будет список курсов, которые посещает этот человек</h5>
    }
}
<p><img src=@Model.Picture.URL height="150"  /></p>


