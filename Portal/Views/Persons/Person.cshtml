@using Portal.Models
@model Person

<div class="container person-wrap">
    <div class="person">
        <div class="person-general-info">
            <img src=@Model.Picture.URL />
            <div class="person-info-text">
                <div class="person-name">@Model.First_Name @Model.Second_Name</div>
                    @if (Model is Teacher)
                    {
                        <div class="person-type">Teacher</div>
                    }
                    else
                    {
                        <div class="person-type">Student</div>
                    }
                <div class="person-contacts">
                    <a href="tel:@Model.Phone">@Model.Phone</a>
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </div>
            </div>
        </div>
        <div class="person-blogs">
            <h4>Most popular blogs</h4>
            @foreach(Blog blog in Model.Blogs)
            {
                @Html.ActionLink(blog.Name, "blog", "blog", new { @id = blog.ID }, null)
            }
        </div>
        <div class="person-courses">
            @if (Model is Teacher)
            {
                <h4>Taught courses</h4>
                foreach (Course course in ((Teacher)Model).Taught_Courses)
                {
                    @Html.ActionLink(course.Name, "course", "courses", new { @id = course.ID }, null)
                }
            } else
            {
                <h4>Subscribed courses</h4>
                foreach (Course course in ((Student)Model).Subscribed_Courses)
                {
                    @Html.ActionLink(course.Name, "course", "courses", new { @id = course.ID }, null)
                }
            }
        </div>
    </div>
</div>

