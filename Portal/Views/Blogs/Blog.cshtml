@model Portal.Models.Blog

@{
    ViewBag.Title = "Blog";
}

<div class="container-fluid">
    <div class="container blog-wrap">
        <div class="blog-header">
            <div class="author">
                <img class="img-circle" src="~/images/1.jpg" />
                @Model.Authors.FirstOrDefault().First_Name @Model.Authors.FirstOrDefault().Second_Name
            </div>
            <h3>@Model.Name</h3>
            <div class="blog-articles-length">@Model.Articles.ToArray().Length articles</div>
        </div>
    </div>
    @Html.Partial("../Articles/_ArticlePreViewList", Model.Articles)
</div>
