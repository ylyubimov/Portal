@model Portal.Models.Article

@{
    ViewBag.Title = "Article";
    @Styles.Render("~/Content/BlogStyles.css")
}

<div class="container-fluid">
    <div class="container article-wrap">
        <div class="article">
            <div class="article-header">
                <div class="author"><img class="img-circle" src="~/images/1.jpg"/>
                @Model.Authors.FirstOrDefault().First_Name @Model.Authors.FirstOrDefault().Second_Name</div>
                <div class="date">@Model.Date_of_Creation</div>
                <div class="article-actions">
                    <div class="rating">
                        <div><span>+</span> @Model.Likes_Count</div>
                        <div><span>-</span> @Model.Dislikes_Count</div>
                    </div>
                    <div class="article-settings dropdown">
                        <div class="btn" data-toggle="dropdown">Settings</div>
                        <ul class="dropdown-menu">
                            <li>Delete</li>
                            <li>Edit</li>
                        </ul>
                    </div>
                </div>
            </div>
            <h2>@Model.Name</h2>
            <p>@Model.Text</p>
        </div>
        
        @foreach (Portal.Models.Comment comment in Model.Comments) {
            <div class="comment">
                <div class="comment-header">
                    <div class="author">
                        <img class="img-circle" src="~/images/1.jpg" />
                        @comment.Author.First_Name @comment.Author.Second_Name
                    </div>
                    <div class="date">commented on @comment.Create_Time</div>
                </div>
                <p>@comment.Text</p>
            </div>
        }
        <div class="comment">
            <div class="comment-header">
                <div class="author">
                    <img class="img-circle" src="~/images/1.jpg" />
                    @Model.Authors.FirstOrDefault().First_Name @Model.Authors.FirstOrDefault().Second_Name
                </div>
                <div class="date">commented on @Model.Date_of_Creation</div>
            </div>
            <p>@Model.Text</p>
        </div>
    </div>
</div>
